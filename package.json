{
  "name": "nasdaqball",
  "version": "0.1.0",
  "private": true,
  "description": "nasdaqball ($NCIBALL) - Index-inspired flywheel memecoin on Solana",
  "workspaces": [
    "apps/*",
    "packages/*",
    "programs/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:contracts": "cd programs/nciball && anchor test",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "deploy:devnet": "cd programs/nciball && anchor deploy --provider.cluster devnet"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "prettier": "^3.1.1",
    "turbo": "^1.11.3",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@8.14.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
